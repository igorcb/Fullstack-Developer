<div class="mt-5 d-flex align-items-center gap-3">
  <div>
    <p>
      <%= image_tag(@user.avatar, style: "width:50px;height:50px", class: "rounded-circle border border-primary")  if @user.avatar.attached?%>
    </p>
  </div>

  <div>
    <p>
      FullName: <%= @user.full_name %>
    </p>

    <p>
      Email: <%= @user.email %>
    </p>

    <p>
      Admin: <%= @user.role? %>
    </p>  
  </div>

</div>
  
<%= link_to "Edit User", edit_user_path(@user), class: 'btn btn-primary btn-sm' %>
<%= link_to "Delete", user_path(@user), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger btn-sm" %>

