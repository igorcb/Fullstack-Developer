<%= form_with(model: @user, class: "") do |f| %>

  <%=  %>

  <div class="mb-3">
    <label for="" class="form-label">Avatar</label>
    <%= f.file_field :avatar, class: "form-control" %>
  </div>

  <div class="mb-3">
    <label for="" class="form-label">FullName</label>
    <%= f.text_field :full_name, class: "form-control", placeholder: "Jonh Doe" %>
    <% @user.errors.full_messages_for(:full_name).each do |message| %>
      <div class="text-danger"><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <label for="" class="form-label">Email</label>
    <%= f.text_field :email, class: "form-control", placeholder: "john@doe.com" %>
    <% @user.errors.full_messages_for(:email).each do |message| %>
      <div class="text-danger"><%= message %></div>
    <% end %>
  </div>

  <% if !@user.new_record? %>
    <% if @user.role? %>
      <div class="mb-3">
        <div class="form-check">
          <%= f.check_box :role, class: "form-check-input" %>
          <label class="form-check-label" for="flexCheckDefault">
            Admin
          </label>
        </div>
      </div>
    <% end %>
  <% end %>

  <% if @user.new_record? %>
    <div class="mb-3">
      <label for="" class="form-label">Password</label>
      <%= f.password_field :password, class: "form-control" %>
      <% @user.errors.full_messages_for(:password).each do |message| %>
        <div class="text-danger"><%= message %></div>
      <% end %>
    </div>

    <div class="mb-3">
      <label for="" class="form-label">Password confirmation</label>
      <%= f.password_field :password_confirmation, class: "form-control" %>
      <% @user.errors.full_messages_for(:password_confirmation).each do |message| %>
        <div class="text-danger"><%= message %></div>
      <% end %>
    </div>
  <% end %>
 
  <div class="submit d-grid gap-2">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>

<% end %>
